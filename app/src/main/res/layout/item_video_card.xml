<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:id="@+id/video_image"
            android:background="@color/red"
            android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="50dp"
            android:id="@+id/channel_image"
            android:layout_margin="8dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Timelapse #4: Trace Red to the very end of the shoreline"
                android:layout_marginRight="24dp"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/video_title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="By AleksandarTesik"
                android:layout_marginRight="24dp"
                android:id="@+id/poster_name"
                android:fontFamily="sans-serif"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="2 weeks ago"
                android:layout_marginRight="24dp"
                android:fontFamily="sans-serif"
                android:id="@+id/post_time_stamp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Subscriptions - Uploads page: the videos come as cards so you could swipe away those you want to hide. "
                android:layout_marginRight="24dp"
                android:maxLines="2"
                android:layout_marginBottom="12dp"
                android:id="@+id/video_desc"
                android:fontFamily="sans-serif"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>